{
  "openapi": "3.0.3",
  "info": {
    "title": "DharmaFlow API",
    "version": "1.0.0",
    "description": "Express API with Firebase Auth, MongoDB, sutras, categories, monks, and dharma talks"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local dev"
    }
  ],
  "paths": {
    "/api/health": {
      "get": {
        "summary": "Health check",
        "tags": ["Utility"],
        "responses": {
          "200": {
            "description": "Service status",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/HealthResponse" } } }
          }
        }
      }
    },
    "/api/home": {
      "get": {
        "summary": "Get home feed",
        "description": "Returns latest text sutra (featured) and 2 random audio sutras",
        "tags": ["Home"],
        "responses": {
          "200": {
            "description": "Home feed data",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/HomeResponse" } } }
          },
          "500": { "description": "Server error" }
        }
      }
    },
    "/api/echo": {
      "post": {
        "summary": "Echo payload",
        "tags": ["Utility"],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "type": "object", "additionalProperties": true } } }
        },
        "responses": {
          "200": {
            "description": "Echoed payload",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/EchoResponse" } } }
          }
        }
      }
    },
    "/api/profile": {
      "get": {
        "summary": "Get authenticated profile",
        "description": "Returns the stored profile; 404 if missing.",
        "tags": ["Profile"],
        "security": [ { "bearerAuth": [] } ],
        "responses": {
          "200": { "description": "Authenticated user profile", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ProfileResponse" } } } },
          "404": { "description": "User not found" },
          "401": { "description": "Unauthorized" }
        }
      },
      "patch": {
        "summary": "Update profile (username, birthday, photo)",
        "description": "Requires existing user.",
        "tags": ["Profile"],
        "security": [ { "bearerAuth": [] } ],
        "requestBody": { "content": { "multipart/form-data": { "schema": { "$ref": "#/components/schemas/ProfileUpdateRequest" } } } },
        "responses": {
          "200": { "description": "Updated user", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ProfileResponse" } } } },
          "400": { "description": "Invalid input" },
          "404": { "description": "User not found" },
          "409": { "description": "Username conflict" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/auth/register": {
      "post": {
        "summary": "Register user via Firebase Auth and persist profile",
        "tags": ["Auth"],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AuthRequest" } } } },
        "responses": {
          "200": { "description": "Registration success", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AuthResponse" } } } },
          "400": { "description": "Invalid input" },
          "409": { "description": "Username conflict" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "Login user via Firebase Auth",
        "tags": ["Auth"],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AuthRequest" } } } },
        "responses": {
          "200": { "description": "Login success", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AuthResponse" } } } },
          "400": { "description": "Invalid input" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/api/categories": {
      "get": {
        "summary": "List categories (public)",
        "tags": ["Categories"],
        "parameters": [
          { "in": "query", "name": "search", "schema": { "type": "string" } },
          { "in": "query", "name": "page", "schema": { "type": "integer", "default": 1 } },
          { "in": "query", "name": "limit", "schema": { "type": "integer", "default": 20 } }
        ],
        "responses": {
          "200": { "description": "Category list", "content": { "application/json": { "schema": { "type": "object", "properties": { "items": { "type": "array", "items": { "$ref": "#/components/schemas/Category" } }, "total": { "type": "integer" }, "page": { "type": "integer" }, "limit": { "type": "integer" } } } } } }
        }
      },
      "post": {
        "summary": "Create category (auth)",
        "tags": ["Categories"],
        "security": [ { "bearerAuth": [] } ],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CategoryCreate" } } } },
        "responses": {
          "201": { "description": "Created", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CategoryResponse" } } } },
          "400": { "description": "Invalid input" },
          "409": { "description": "Duplicate category" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/categories/{id}": {
      "get": {
        "summary": "Get category (public)",
        "tags": ["Categories"],
        "parameters": [ { "in": "path", "name": "id", "required": true, "schema": { "type": "string" } } ],
        "responses": { "200": { "description": "Found", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CategoryResponse" } } } }, "404": { "description": "Not found" } }
      },
      "patch": {
        "summary": "Update category (auth)",
        "tags": ["Categories"],
        "security": [ { "bearerAuth": [] } ],
        "parameters": [ { "in": "path", "name": "id", "required": true, "schema": { "type": "string" } } ],
        "requestBody": { "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CategoryUpdate" } } } },
        "responses": {
          "200": { "description": "Updated", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CategoryResponse" } } } },
          "404": { "description": "Not found" },
          "409": { "description": "Duplicate category" },
          "401": { "description": "Unauthorized" }
        }
      },
      "delete": {
        "summary": "Delete category (auth)",
        "description": "If sutras exist, category is soft-deleted.",
        "tags": ["Categories"],
        "security": [ { "bearerAuth": [] } ],
        "parameters": [ { "in": "path", "name": "id", "required": true, "schema": { "type": "string" } } ],
        "responses": {
          "200": { "description": "Deleted or soft-deleted" },
          "404": { "description": "Not found" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/sutras": {
      "get": {
        "summary": "List sutras (public)",
        "tags": ["Sutras"],
        "parameters": [
          { "in": "query", "name": "category", "schema": { "type": "string" } },
          { "in": "query", "name": "search", "schema": { "type": "string" } },
          { "in": "query", "name": "tag", "schema": { "type": "string" } },
          { "in": "query", "name": "type", "schema": { "type": "string", "enum": ["text", "audio"] } },
          { "in": "query", "name": "page", "schema": { "type": "integer", "default": 1 } },
          { "in": "query", "name": "limit", "schema": { "type": "integer", "default": 20 } }
        ],
        "responses": {
          "200": { "description": "Sutra list", "content": { "application/json": { "schema": { "type": "object", "properties": { "items": { "type": "array", "items": { "$ref": "#/components/schemas/Sutra" } }, "total": { "type": "integer" }, "page": { "type": "integer" }, "limit": { "type": "integer" } } } } } }
        }
      },
      "post": {
        "summary": "Create sutra (auth)",
        "tags": ["Sutras"],
        "security": [ { "bearerAuth": [] } ],
        "requestBody": { "required": true, "content": { "multipart/form-data": { "schema": { "$ref": "#/components/schemas/SutraCreate" } } } },
        "responses": {
          "201": { "description": "Created", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/SutraResponse" } } } },
          "400": { "description": "Invalid input or missing category" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/sutras/{id}": {
      "get": {
        "summary": "Get sutra (public)",
        "tags": ["Sutras"],
        "parameters": [ { "in": "path", "name": "id", "required": true, "schema": { "type": "string" } } ],
        "responses": { "200": { "description": "Found", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/SutraResponse" } } } }, "404": { "description": "Not found" } }
      },
      "patch": {
        "summary": "Update sutra (auth)",
        "tags": ["Sutras"],
        "security": [ { "bearerAuth": [] } ],
        "parameters": [ { "in": "path", "name": "id", "required": true, "schema": { "type": "string" } } ],
        "requestBody": { "content": { "multipart/form-data": { "schema": { "$ref": "#/components/schemas/SutraUpdate" } } } },
        "responses": {
          "200": { "description": "Updated", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/SutraResponse" } } } },
          "400": { "description": "Invalid input or missing category" },
          "404": { "description": "Not found" },
          "401": { "description": "Unauthorized" }
        }
      },
      "delete": {
        "summary": "Delete sutra (auth)",
        "tags": ["Sutras"],
        "security": [ { "bearerAuth": [] } ],
        "parameters": [ { "in": "path", "name": "id", "required": true, "schema": { "type": "string" } } ],
        "responses": { "200": { "description": "Deleted" }, "404": { "description": "Not found" }, "401": { "description": "Unauthorized" } }
      }
    },
    "/api/monks": {
      "get": {
        "summary": "List monks (public)",
        "tags": ["Monks"],
        "parameters": [
          { "in": "query", "name": "search", "schema": { "type": "string" } },
          { "in": "query", "name": "page", "schema": { "type": "integer", "default": 1 } },
          { "in": "query", "name": "limit", "schema": { "type": "integer", "default": 20 } }
        ],
        "responses": { "200": { "description": "Monk list" } }
      },
      "post": {
        "summary": "Create monk (auth)",
        "tags": ["Monks"],
        "security": [ { "bearerAuth": [] } ],
        "requestBody": { "required": true, "content": { "multipart/form-data": { "schema": { "type": "object", "properties": { "name": { "type": "string" }, "bio": { "type": "string" }, "thumbnail": { "type": "string", "format": "binary" }, "avatar": { "type": "string", "format": "binary" } }, "required": ["name"] } } } },
        "responses": { "201": { "description": "Created" }, "400": { "description": "Invalid input" }, "409": { "description": "Duplicate" }, "401": { "description": "Unauthorized" } }
      }
    },
    "/api/monks/{id}": {
      "get": {
        "summary": "Get monk (public)",
        "tags": ["Monks"],
        "parameters": [ { "in": "path", "name": "id", "required": true, "schema": { "type": "string" } } ],
        "responses": { "200": { "description": "Found" }, "404": { "description": "Not found" } }
      },
      "patch": {
        "summary": "Update monk (auth)",
        "tags": ["Monks"],
        "security": [ { "bearerAuth": [] } ],
        "parameters": [ { "in": "path", "name": "id", "required": true, "schema": { "type": "string" } } ],
        "requestBody": { "content": { "multipart/form-data": { "schema": { "type": "object", "properties": { "name": { "type": "string" }, "bio": { "type": "string" }, "thumbnail": { "type": "string", "format": "binary" }, "avatar": { "type": "string", "format": "binary" } } } } } },
        "responses": { "200": { "description": "Updated" }, "404": { "description": "Not found" }, "409": { "description": "Duplicate" }, "401": { "description": "Unauthorized" } }
      },
      "delete": {
        "summary": "Delete monk (auth)",
        "description": "Soft-deletes if talks exist, otherwise hard delete.",
        "tags": ["Monks"],
        "security": [ { "bearerAuth": [] } ],
        "parameters": [ { "in": "path", "name": "id", "required": true, "schema": { "type": "string" } } ],
        "responses": { "200": { "description": "Deleted or soft-deleted" }, "404": { "description": "Not found" }, "401": { "description": "Unauthorized" } }
      }
    },
    "/api/dharma-talks": {
      "get": {
        "summary": "List dharma talks (public)",
        "tags": ["DharmaTalks"],
        "parameters": [
          { "in": "query", "name": "monk", "schema": { "type": "string" } },
          { "in": "query", "name": "monkName", "schema": { "type": "string" } },
          { "in": "query", "name": "search", "schema": { "type": "string" } },
          { "in": "query", "name": "tag", "schema": { "type": "string" } },
          { "in": "query", "name": "page", "schema": { "type": "integer", "default": 1 } },
          { "in": "query", "name": "limit", "schema": { "type": "integer", "default": 20 } }
        ],
        "responses": { "200": { "description": "Dharma talk list" } }
      },
      "post": {
        "summary": "Create dharma talk (auth)",
        "tags": ["DharmaTalks"],
        "security": [ { "bearerAuth": [] } ],
        "requestBody": { "required": true, "content": { "multipart/form-data": { "schema": { "type": "object", "properties": { "monk": { "type": "string" }, "title": { "type": "string" }, "description": { "type": "string" }, "tags": { "type": "array", "items": { "type": "string" } }, "duration": { "type": "number" }, "type": { "type": "string", "enum": ["audio"] }, "thumbnail": { "type": "string", "format": "binary" }, "audio": { "type": "string", "format": "binary" } }, "required": ["monk", "title", "duration", "audio"] } } } },
        "responses": { "201": { "description": "Created" }, "400": { "description": "Invalid input" }, "401": { "description": "Unauthorized" } }
      }
    },
    "/api/dharma-talks/{id}": {
      "get": {
        "summary": "Get dharma talk (public)",
        "tags": ["DharmaTalks"],
        "parameters": [ { "in": "path", "name": "id", "required": true, "schema": { "type": "string" } } ],
        "responses": { "200": { "description": "Found" }, "404": { "description": "Not found" } }
      },
      "patch": {
        "summary": "Update dharma talk (auth)",
        "tags": ["DharmaTalks"],
        "security": [ { "bearerAuth": [] } ],
        "parameters": [ { "in": "path", "name": "id", "required": true, "schema": { "type": "string" } } ],
        "requestBody": { "content": { "multipart/form-data": { "schema": { "type": "object", "properties": { "monk": { "type": "string" }, "title": { "type": "string" }, "description": { "type": "string" }, "tags": { "type": "array", "items": { "type": "string" } }, "duration": { "type": "number" }, "type": { "type": "string", "enum": ["audio"] }, "thumbnail": { "type": "string", "format": "binary" }, "audio": { "type": "string", "format": "binary" } } } } } },
        "responses": { "200": { "description": "Updated" }, "400": { "description": "Invalid input" }, "404": { "description": "Not found" }, "401": { "description": "Unauthorized" } }
      },
      "delete": {
        "summary": "Delete dharma talk (auth)",
        "tags": ["DharmaTalks"],
        "security": [ { "bearerAuth": [] } ],
        "parameters": [ { "in": "path", "name": "id", "required": true, "schema": { "type": "string" } } ],
        "responses": { "200": { "description": "Deleted" }, "404": { "description": "Not found" }, "401": { "description": "Unauthorized" } }
      }
    },
    "/api/search": {
      "get": {
        "summary": "Search sutras and dharma talks",
        "tags": ["Search"],
        "parameters": [
          { "in": "query", "name": "q", "required": true, "schema": { "type": "string" } },
          { "in": "query", "name": "type", "schema": { "type": "string", "enum": ["sutra", "dharma"] } },
          { "in": "query", "name": "tag", "schema": { "type": "string" } },
          { "in": "query", "name": "monk", "schema": { "type": "string" } },
          { "in": "query", "name": "category", "schema": { "type": "string" } },
          { "in": "query", "name": "page", "schema": { "type": "integer", "default": 1 } },
          { "in": "query", "name": "limit", "schema": { "type": "integer", "default": 20 } }
        ],
        "responses": {
          "200": { "description": "Search results", "content": { "application/json": { "schema": { "type": "object", "properties": { "items": { "type": "array", "items": { "$ref": "#/components/schemas/SearchItem" } }, "total": { "type": "integer" }, "page": { "type": "integer" }, "limit": { "type": "integer" } } } } } },
          "400": { "description": "Missing q" }
        }
      }
    },
    "/api/favorites": {
      "get": {
        "summary": "List favorites for current user",
        "tags": ["Favorites"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "in": "query", "name": "type", "schema": { "type": "string", "enum": ["text", "audio"] } },
          { "in": "query", "name": "tag", "schema": { "type": "string" } },
          { "in": "query", "name": "category", "schema": { "type": "string" } },
          { "in": "query", "name": "search", "schema": { "type": "string" } },
          { "in": "query", "name": "page", "schema": { "type": "integer", "default": 1 } },
          { "in": "query", "name": "limit", "schema": { "type": "integer", "default": 20 } }
        ],
        "responses": {
          "200": {
            "description": "Favorite sutras",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "favoritedAt": { "type": "string", "format": "date-time" },
                          "sutra": { "$ref": "#/components/schemas/Sutra" }
                        }
                      }
                    },
                    "total": { "type": "integer" },
                    "page": { "type": "integer" },
                    "limit": { "type": "integer" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/calendar": {
      "get": {
        "summary": "Get calendar month",
        "description": "Returns all days in the requested month with marked boolean.",
        "tags": ["Calendar"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "in": "query", "name": "month", "required": true, "schema": { "type": "string", "pattern": "^\\d{4}-\\d{2}$", "example": "2026-02" } }
        ],
        "responses": {
          "200": { "description": "Month data" },
          "400": { "description": "Invalid month" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/calendar/chant": {
      "post": {
        "summary": "Record chanting day",
        "description": "Idempotent upsert for a given date (YYYY-MM-DD).",
        "tags": ["Calendar"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" } },
                "required": ["date"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Recorded" },
          "400": { "description": "Invalid date" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/calendar/streak": {
      "get": {
        "summary": "Get streak summary",
        "description": "Current streak is based on server today.",
        "tags": ["Calendar"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Streak summary"
          },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/favorites/{id}": {
      "post": {
        "summary": "Add favorite",
        "tags": ["Favorites"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "string" } }],
        "responses": { "200": { "description": "Favorited" }, "404": { "description": "Sutra or user not found" }, "401": { "description": "Unauthorized" } }
      },
      "delete": {
        "summary": "Remove favorite",
        "tags": ["Favorites"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "string" } }],
        "responses": { "200": { "description": "Unfavorited" }, "401": { "description": "Unauthorized" } }
      }
    }
  },
  "components": {
    "securitySchemes": { "bearerAuth": { "type": "http", "scheme": "bearer", "bearerFormat": "JWT" } },
    "schemas": {
      "HealthResponse": { "type": "object", "properties": { "status": { "type": "string", "example": "ok" }, "uptime": { "type": "number", "example": 12.34 } } },
      "HomeResponse": { "type": "object", "properties": { "featuredTextSutra": { "oneOf": [{ "$ref": "#/components/schemas/Sutra" }, { "type": "null" }] }, "audioSutras": { "type": "array", "items": { "$ref": "#/components/schemas/Sutra" } } } },
      "EchoResponse": { "type": "object", "properties": { "data": { "type": "object", "additionalProperties": true }, "message": { "type": "string", "example": "echo" } } },
      "ProfileResponse": { "type": "object", "properties": { "authUser": { "type": "object", "additionalProperties": true }, "user": { "type": "object", "properties": { "uid": { "type": "string" }, "email": { "type": "string", "format": "email" }, "displayName": { "type": "string" }, "photoURL": { "type": "string" }, "username": { "type": "string" }, "birthday": { "type": "string", "format": "date" } }, "additionalProperties": true } } },
      "AuthRequest": { "type": "object", "required": ["email", "password", "username"], "properties": { "email": { "type": "string", "format": "email", "example": "user@example.com" }, "password": { "type": "string", "example": "secret123" }, "username": { "type": "string", "example": "myusername" }, "birthday": { "type": "string", "format": "date", "example": "2000-01-01" } } },
      "AuthResponse": { "type": "object", "properties": { "uid": { "type": "string", "example": "firebase-uid" }, "idToken": { "type": "string", "description": "JWT for authenticated calls" }, "refreshToken": { "type": "string" }, "email": { "type": "string", "format": "email" }, "username": { "type": "string" }, "birthday": { "type": "string", "format": "date" } } },
      "ProfileUpdateRequest": { "type": "object", "properties": { "username": { "type": "string", "example": "newname" }, "birthday": { "type": "string", "format": "date", "example": "2000-01-01" }, "image": { "type": "string", "format": "binary" } } },
      "Category": { "type": "object", "properties": { "_id": { "type": "string" }, "name": { "type": "string" }, "description": { "type": "string" }, "isDeleted": { "type": "boolean" } } },
      "CategoryCreate": { "type": "object", "required": ["name"], "properties": { "name": { "type": "string" }, "description": { "type": "string" } } },
      "CategoryUpdate": { "type": "object", "properties": { "name": { "type": "string" }, "description": { "type": "string" } } },
      "CategoryResponse": { "type": "object", "properties": { "category": { "$ref": "#/components/schemas/Category" } } },
