{
  "openapi": "3.0.3",
  "info": {
    "title": "DharmaFlow API",
    "version": "1.0.0",
    "description": "Express API with Firebase Auth and MongoDB"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local dev"
    }
  ],
  "paths": {
    "/api/health": {
      "get": {
        "summary": "Health check",
        "responses": {
          "200": {
            "description": "Service status",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/echo": {
      "post": {
        "summary": "Echo payload",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "additionalProperties": true
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Echoed payload",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EchoResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/profile": {
      "get": {
        "summary": "Get authenticated profile",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Authenticated user profile",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProfileResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "HealthResponse": {
        "type": "object",
        "properties": {
          "status": { "type": "string", "example": "ok" },
          "uptime": { "type": "number", "example": 12.34 }
        }
      },
      "EchoResponse": {
        "type": "object",
        "properties": {
          "data": { "type": "object", "additionalProperties": true },
          "message": { "type": "string", "example": "echo" }
        }
      },
      "ProfileResponse": {
        "type": "object",
        "properties": {
          "authUser": { "type": "object", "additionalProperties": true },
          "user": {
            "type": "object",
            "properties": {
              "uid": { "type": "string" },
              "email": { "type": "string", "format": "email" },
              "displayName": { "type": "string" },
              "photoURL": { "type": "string" }
            },
            "additionalProperties": true
          }
        }
      }
    }
  }
}
